#!/bin/bash
# bchat Status Checker

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
CONFIG_FILE="$SCRIPT_DIR/../config.json"
CHATS_DIR="$SCRIPT_DIR/../chats"
LOGS_DIR="$SCRIPT_DIR/../logs"

echo "ğŸ” bchat System Status"
echo "======================"
echo ""

# Check configuration
if [ -f "$CONFIG_FILE" ]; then
    echo "âœ… Configuration: $CONFIG_FILE"
    if python3 -c "import json; json.load(open('$CONFIG_FILE'))" 2>/dev/null; then
        echo "   ğŸ“‹ Config file is valid JSON"
    else
        echo "   âŒ Config file has JSON errors"
    fi
else
    echo "âŒ Configuration file not found"
fi

# Check API key
if [ -n "$GOOGLE_API_KEY" ]; then
    echo "âœ… Google API Key: Set (${#GOOGLE_API_KEY} characters)"
    # Test API key with a simple call
    if python3 -c "
import os
import google.generativeai as genai
genai.configure(api_key=os.getenv('GOOGLE_API_KEY'))
model = genai.GenerativeModel('gemini-2.5-flash')
response = model.generate_content('Hello')
print('   ğŸŒŸ API key working - Gemini responded')
" 2>/dev/null; then
        echo "   ğŸŒŸ API key verified working"
    else
        echo "   âš ï¸  API key set but may have issues"
    fi
else
    echo "âŒ GOOGLE_API_KEY not set in environment"
fi

# Check directories
echo ""
echo "ğŸ“ Directory Status:"
for dir in "$CHATS_DIR" "$LOGS_DIR"; do
    if [ -d "$dir" ]; then
        file_count=$(ls -1 "$dir" 2>/dev/null | wc -l)
        echo "   âœ… $(basename "$dir")/: $file_count files"
    else
        echo "   âŒ $(basename "$dir")/: Not found"
    fi
done

# Check executables
echo ""
echo "ğŸ”§ Executable Status:"
for script in bchat rchat runchat start; do
    if [ -x "$SCRIPT_DIR/$script" ]; then
        echo "   âœ… $script: Ready"
    else
        echo "   âŒ $script: Missing or not executable"
    fi
done

# Check Python dependencies
echo ""
echo "ğŸ Python Dependencies:"
if python3 -c "import watchdog, google.generativeai, dotenv; print('   âœ… All core dependencies available')" 2>/dev/null; then
    echo "   âœ… All core dependencies available"
else
    echo "   âŒ Missing Python dependencies"
fi

# Check recent activity
echo ""
echo "ğŸ“ˆ Recent Activity:"
if [ -f "$LOGS_DIR/chat_monitor.log" ]; then
    last_entry=$(tail -1 "$LOGS_DIR/chat_monitor.log" 2>/dev/null)
    if [ -n "$last_entry" ]; then
        echo "   ğŸ“ Last log entry: $last_entry"
    else
        echo "   ğŸ“ Log file exists but empty"
    fi
else
    echo "   ğŸ“ No monitoring log found"
fi

# Check if monitoring is running
echo ""
echo "ğŸ”„ Monitoring Status:"
if pgrep -f "chat_monitor.py" >/dev/null; then
    echo "   âœ… bchat monitor is running (PID: $(pgrep -f chat_monitor.py))"
else
    echo "   â¸ï¸  bchat monitor is not currently running"
    echo "   ğŸ’¡ Run './start' to begin monitoring"
fi

echo ""
echo "ğŸš€ Quick Commands:"
echo "   ./start          # Start monitoring"
echo "   ./bchat          # Backup current chat"
echo "   ./bchat-status   # Show this status"
echo "   ./bchat --help   # Gemini CLI help"